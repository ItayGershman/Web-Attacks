{
    "name": "Track The Trackers",
    "version": "1.0",
    "description": "a Google Chrome extension that can inform the user which trackers/ad-services they encounter during their browsing",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "title": "Track The Trackers",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "trackers.js"
            ]
        }
    ],
    "manifest_version": 2
}